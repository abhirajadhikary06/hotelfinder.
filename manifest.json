{
  "manifest_version": 3,
  "name": "Hotel Finder",
  "version": "1.0",
  "description": "Find the perfect hotel for your next adventure with ease! Our extension seamlessly integrates with Booking.com.",
  "permissions": ["contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  }
}
